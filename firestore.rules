rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Allow users to read and write their own profile
    match /profiles/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Allow users to read and write their own Instagram accounts
    match /instagram_accounts/{accountId} {
      allow read, write: if request.auth != null && 
        (resource.data.user_id == request.auth.uid || 
         request.resource.data.user_id == request.auth.uid);
    }
    
    // Allow users to read and write their own Instagram insights
    match /instagram_insights/{insightId} {
      allow read, write: if request.auth != null && 
        (resource.data.user_id == request.auth.uid || 
         request.resource.data.user_id == request.auth.uid);
    }
    
    // Allow users to read and write their own user requirements
    match /user_requirements/{requirementId} {
      allow read, write: if request.auth != null && 
        (resource.data.user_id == request.auth.uid || 
         request.resource.data.user_id == request.auth.uid);
    }
    
    // Allow users to read and write their own support chats
    match /support_chats/{chatId} {
      allow read, write: if request.auth != null && 
        (resource.data.user_id == request.auth.uid || 
         request.resource.data.user_id == request.auth.uid);
    }
    
    // Allow users to read and write their own payments
    match /payments/{paymentId} {
      allow read, write: if request.auth != null && 
        (resource.data.user_id == request.auth.uid || 
         request.resource.data.user_id == request.auth.uid);
    }
    
    // Allow users to read and write their own subscriptions
    match /subscriptions/{subscriptionId} {
      allow read, write: if request.auth != null && 
        (resource.data.user_id == request.auth.uid || 
         request.resource.data.user_id == request.auth.uid);
    }
    
    // Allow staff and admin to read all data
    match /{document=**} {
      allow read: if request.auth != null && 
        (get(/databases/$(database)/documents/profiles/$(request.auth.uid)).data.role in ['staff', 'admin']);
    }
    
    // Allow admin to write to all collections
    match /{document=**} {
      allow write: if request.auth != null && 
        (get(/databases/$(database)/documents/profiles/$(request.auth.uid)).data.role == 'admin');
    }
    
    // Allow diagnostic test collection for testing
    match /diagnostic_test/{testId} {
      allow read, write: if request.auth != null;
    }
  }
}
